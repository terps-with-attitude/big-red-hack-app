<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="twa.lectureme.StudentInterfaceActivity">

    <EditText
        android:id="@+id/qText"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="500dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <ImageButton
        android:id="@+id/submitQ"
        style="@android:style/Widget.Material.Light.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:background="@android:color/transparent"
        android:onClick="onSubmit"
        app:layout_constraintBottom_toBottomOf="@+id/qText"
        app:layout_constraintRight_toRightOf="@+id/qText"
        app:srcCompat="@drawable/ic_send_black_24dp" />

    <ScrollView
        android:id="@+id/SCROLLER_ID"
        android:layout_width="fill_parent"
        android:layout_height="485dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginBottom="65dp"
        android:paddingTop="10dp"
        android:scrollbars="vertical"
        android:fillViewport="true">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textSize="75px"
        android:text="The quick brown fox jumped over the lazy dog. Y'all \n \nain't going anywhereThe quick brown fox jumped over the lazy dog. Y'all ain't going anywhereThe quick brown fox jumped over \n\nthe lazy dog. Y'all ain't going anywhereThe quick brown fox jumped over the lazy dog. Y'all ain't going anywhere The quick brown fox jumped over the lazy dog. Y'all ain't going anywhere The quick brown fox jumped over the lazy dog. Y'all ain't going anywhere The quick brown fox jumped over the lazy dog. Y'all ain't going anywhere The quick brown fox jumped over the lazy dog. Y'all ain't going anywhereThe quick brown fox jumped over the lazy dog. Y'all ain't going anywhereThe quick brown fox jumped over the lazy dog. Y'all ain't going anywhere" />
    </ScrollView>
</android.support.constraint.ConstraintLayout>
